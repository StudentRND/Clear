<h2>Day-Of</h2>
<div class="switcher">
    {% if me.is_admin %}
        {% set events = managed_batch.events %}
    {% else %}
        {% set events = me.current_managed_events %}
    {% endif %}

    {% if events|length > 1 %}
        <select id="event-switcher">
            {% for switch_event in events %}
                <option value="{{ switch_event.id }}"
                        {% if switch_event.id == event.id %}selected{% endif %}>{{ switch_event.name }}</option>
            {% endfor %}
        </select>
    {% endif %}
</div>

<section class="evangelism">
    <ul>
        <li><a href="/dayof/checkin">Checkin</a></li>
        <li><a href="#" class="new-registration-button">Register at the Door</a></li>
        <li><a href="/dayof/deck/slides" target="_blank">Kickoff Slide Deck</a></li>
        <li><a href="https://live.codeday.org/" target="_blank">Live Schedule Display</a></li>
        <li><a href="/dayof/support-calls">Support Call History</a></li>
        <li><a href="/dayof/emergency">Emergency Contacts</a></li>
        <li><a href="https://play.google.com/store/apps/details?id=org.srnd.codeday.clear.checkin" target="_blank">Android App</a></li>
    </ul>
</section>
<p style="text-align:center;font-size:7px;text-transform:uppercase;"><img src="/dayof/checkin/configuration?cachebreak={{ random() }}" /><br />{{ event.name }} Config Barcode</p>

<script type="text/javascript">
    $('#event-switcher').on('change', function(){
        window.location = '/dayof/switch?event='+$(this).val();
    });
</script>
