<!DOCTYPE html>
<html>
<head>
    <title>CodeDay {{ event.name }} Kickoff</title>

    <meta name="robots" content="noindex, nofollow" />

    <link rel="stylesheet" media="screen" href="/assets/js/deck/core/deck.core.css">
    <link rel="stylesheet" media="print" href="/assets/js/deck/core/print.css">
    <link rel="stylesheet" media="screen" href="/assets/js/deck/extensions/navigation/deck.navigation.css">
    <link rel="stylesheet" media="screen" href="/assets/js/deck/extensions/status/deck.status.css">
    <link rel="stylesheet" media="screen" href="/assets/css/deck/themes/transition/horizontal-slide.css">
    <style type="text/css">
        html {
            font-size: 2vh;
        }

        .deck-container {
            padding: 0;
            width: 100%;
            height: 100%;
            background-color: #000;
        }

        .slide {
            position: relative;
            width: 100%;
            height: 100%;
            padding: 1rem;
            margin: 0;
            background-color: #fff;
            font-family: helvetica, arial, sans-serif;
            background-size: cover;
            background-position: 50% 50%;
        }

        .slide h1, .slide h2, .slide h3 {
            text-transform: uppercase;
        }

        .slide.video {
            background-color: #000;
            color: #fff;
            text-align: center;
        }

        .slide.video iframe {
            width: 80%;
            height: 70%;
            margin: 0 auto;
        }

        .slide.video h1 {
            font-size: 5rem;
            text-align: center;
            margin-top: 0.5rem;
        }

        .slide.title hgroup {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;

            text-align: center;
            background: rgba(0, 0, 0, 0.5);
            padding: 1rem;
        }

        .slide.title.bottom hgroup {
            top: auto;
            bottom: 0;
            padding-bottom: 5rem;
        }

        .slide.title hgroup h1 {
            color: #fff;
            font-size: 7rem;
            margin: 0;
        }

        .slide.title hgroup h2 {
            color: #fff;
            font-size: 3rem;
            margin: 0;
        }

        .slide div.credit {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;

            background: rgba(0, 0, 0, 0.5);
            padding: 1rem 1rem 3rem;
            color: #fff;
        }

        .slide.title div.credit {
            top: 0;
            bottom: auto;
            padding: 1rem;
        }

        .slide.list div {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;

            background: rgba(0, 0, 0, 0.5);
        }

        .slide.list div h1 {
            color: #fff;
            font-size: 5rem;
            text-align: center;
            margin-top: 0.5rem;
        }

        .slide.list div ul {
            color: #fff;
            font-size: 3rem;
            padding-left: 5rem;
            margin: 0;
        }

        .slide.list div ul.first {
            margin-bottom: 0;
        }

        .slide.sponsors h1 {
            color: #000;
            font-size: 2rem;
            text-align: center;
            margin: 0.5rem;
        }

        .slide.sponsors div {
            text-align: center;
            padding: 0 5rem;
        }

        .slide.sponsors div span {
            display: inline-block;
            padding: 1rem;
        }

        .slide.sponsors div img {
            width: 12rem;
            height: auto;
            max-height: 12rem;
            margin: 30px 30px;
        }

        .slide.sponsors p.blurb {
            font-size: 2rem;
        }

    </style>
</head>
<body>

<div class="deck-container">
    <section class="slide title bottom" style="background-image: url(/assets/img/kickoff/intro.jpg)">
        <hgroup>
            <h1>CodeDay</h1>
            <h2>Build Something Awesome in 24 Hours</h2>
        </hgroup>
    </section>

    <section class="slide">
    <script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/E-v1.js" async></script><div class="wistia_responsive_padding" style="padding:56.25% 0 0 0;position:relative;"><div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;"><div class="wistia_embed wistia_async_qdkprjanhh videoFoam=true" style="height:100%;width:100%">&nbsp;</div></div></div></section>

    {% if (event.sponsors|length) > 0 %}
        {% for sponsor in event.sponsors %}
            <section class="slide sponsors event">
                <h1>Local Sponsor</h1>
                <div>
                    <span><img src="/api/i/sponsor/{{ sponsor.id }}_256.jpg" alt="{{ sponsor.name }}" /></span>
                    <p class="blurb">
                        {{ sponsor.blurb }}
                    </p>
                    {% if sponsor.blurb != sponsor.description %}
                        <p class="description">
                            {{ sponsor.description }}
                        </p>
                    {% endif %}
                </div>
            </section>
        {% endfor %}
    {% endif %}

    <section class="slide sponsors event">
        <h1>National Sponsor</h1>
        <div>
            <span><img src="https://codeday.org/assets/img/sponsors/lexisnexis.png" alt="LexisNexis Risk Solutions" /></span>
            <p class="blurb">
                LexisNexis Risk Solutions has internships and other opportunities for high school and college
                students attending CodeDay this summer! Visit codeday.org/summer for more information.
            </p>
        </div>
    </section>

    <section class="slide list" style="background-image: url(/assets/img/kickoff/workshops.jpg)">
        <div>
            <h1>Workshops</h1>
            <ul class="first">
                {% for day in event.schedule %}
                    {% for activity in day %}
                        {% if activity.type != 'event' %}
                            <li><strong>{{ activity.hour }}:</strong> {{ activity.title }}</li>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
    </section>

    <section class="slide list" style="background-image: url(/assets/img/kickoff/awards.jpg)">
        <div>
            <h1>Awards</h1>
            <ul>
                <li>Best in Show</li>
                <li>Best in Class (best game, best app, etc)</li>
                <li>Special Prizes</li>
            </ul>
        </div>
    </section>

    <section class="slide title bottom" style="background-image: url(/assets/img/kickoff/pitch.jpg)">
        <hgroup>
            <h2>Let's get to</h2>
            <h1>Pitches</h1>
        </hgroup>
    </section>

    <div aria-role="navigation">
        <a href="#" class="deck-prev-link" title="Previous">&#8592;</a>
        <a href="#" class="deck-next-link" title="Next">&#8594;</a>
    </div>

    <p class="deck-status" aria-role="status">
        <span class="deck-status-current"></span>
        /
        <span class="deck-status-total"></span>
    </p>
</div>
<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="/assets/js/deck/modernizr.js"></script>
<script src="/assets/js/deck/core/deck.core.js"></script>
<script src="/assets/js/deck/extensions/status/deck.status.js"></script>
<script src="/assets/js/deck/extensions/navigation/deck.navigation.js"></script>
<script type="text/javascript">
    $(function() {
        if(window.location.hash) {
            window.location.hash = '';
        }
        $.deck('.slide');
    });
</script>
</body>
</html>
